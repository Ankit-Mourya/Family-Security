<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/forth_img"
        android:layout_width="@dimen/dimen_64dp"
        android:layout_height="@dimen/dimen_64dp"
        android:src="@drawable/pic4"
        android:layout_margin="@dimen/dimen_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nancy"
        app:layout_constraintTop_toBottomOf="@+id/forth_img"
        app:layout_constraintStart_toStartOf="@id/forth_img"
        app:layout_constraintEnd_toEndOf="@id/forth_img"
        android:textSize="@dimen/dimen_16_sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/Linear_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toStartOf="@id/forth_img"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@id/forth_img"
        android:background="@drawable/shape_rounded_rect">
        <TextView
            android:id="@+id/invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invite"
            android:textStyle="bold"
            />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>